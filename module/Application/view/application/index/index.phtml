<div class="col-sm-3">
    <?php foreach ($this->classes as $class) { ?>
        <a href="/<?php echo urlencode($class->get('fqn')) ?>"><?php echo $class->get('fqn') ?></a><br/>
    <?php } ?>
</div>
<div class="col-sm-9">
    <?php foreach ($this->classes as $class) { ?>
        <?php if ($class->get('fqn') == $this->fqn) { ?>
            <h4><?php echo $class->get('fqn') ?></h4>
            <?php $extendedClass = $class->get('extends') ?>
            <?php if (is_array($extendedClass) && !empty($extendedClass)) { ?>
                Extends:
                <ul>
                    <li><?php echo $extendedClass['fqn'] ?></li>
                </ul>
            <?php } ?>
            <?php $implementedInterfaces = $class->get('implements') ?>
            <?php if (is_array($implementedInterfaces) && !empty($implementedInterfaces)) { ?>
                Implements:
                <ul>
                <?php foreach ($implementedInterfaces as $implementedInterface) { ?>
                    <li><?php echo $implementedInterface['fqn'] ?></li>
                <?php } ?>
                </ul>
            <?php } ?>
            <?php $usagesWithNew = $class->get('usages.new') ?>
            <?php if (is_array($usagesWithNew) && !empty($usagesWithNew)) { ?>
                Usages with new:
                <ul>
                <?php foreach ($usagesWithNew as $usageWithNew) { ?>
                    <li><?php echo $usageWithNew['context'] ?></li>
                <?php } ?>
                </ul>
            <?php } ?>
            <?php $usagesInTypeDeclaration = $class->get('usages.type-declaration') ?>
            <?php if (is_array($usagesInTypeDeclaration) && !empty($usagesInTypeDeclaration)) { ?>
                Usages in type declaration:
                <ul>
                <?php foreach ($usagesInTypeDeclaration as $usageInTypeDeclaration) { ?>
                    <li><?php echo $usageInTypeDeclaration['context'] ?></li>
                <?php } ?>
                </ul>
            <?php } ?>
            <?php $usagesWithUse = $class->get('usages.use') ?>
            <?php if (is_array($usagesWithUse) && !empty($usagesWithUse)) { ?>
                Usages with use in files:
                <ul>
                <?php foreach ($usagesWithUse as $usageWithUse) { ?>
                    <li><?php echo $usageWithUse['file'] ?></li>
                <?php } ?>
                </ul>
            <?php } ?>
        <?php } ?>
    <?php } ?>
</div>

